<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:p="http://www.springframework.org/schema/p"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
       
        
        <!-- The short hand approach to use setter method dependency injection -->
	<bean id="AddressBean" class="com.java.Beans.Address" p:address="HOME"/>
	
	<bean id="student" class="com.java.Beans.Student" p:nameString="ANSH" p:address-ref="AddressBean"/>
	
</beans>